<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
    
    <insert id="insert" parameterType="com.mysite.vo.UserVo">
        <![CDATA[
          insert into users
          values(seq_users_no.nextval,
                #{name},
                #{email},
                #{password},
                #{gender}
                ) 
        
        ]]>
    
    </insert>
    
    <select id="selectUserByEmailPw" parameterType="map" resultType="com.mysite.vo.UserVo">
    <![CDATA[
    select no, name
    from users
    where email=#{email}
    and password=#{password}
    
    
    ]]>
    
    </select>
    
    <select id="selectUserByNo" parameterType="int" resultType="com.mysite.vo.UserVo">
    
    <![CDATA[
        select no,name, email,gender
        from users
        where no=#{no}
    
    
    
    ]]>
    </select>
    
    <update id="update" parameterType="com.mysite.vo.UserVo">
    
    
    <![CDATA[
	    update users
	    set name=#{name},
	        gender=#{gender}
    ]]>
     <if test="password!=null and password !='' ">
         , password=#{password}
    </if>
   <![CDATA[ 
   		where no=#{no}
    ]]>
    
    
    </update>
    
    <select id="doublecheck" parameterType="com.mysite.vo.UserVo" resultType="int">
    <![CDATA[
    select no
    from users
    where email=#{email}    
    
    ]]>
    
    </select>

          
</mapper>
